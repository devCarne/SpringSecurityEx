<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="stu.kms.WebSecurity.mapper.BoardAttachMapper">

    <insert id="insert">
        insert into tbl_attach
        VALUES (#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{bno})
    </insert>

    <delete id="delete">
        delete
        from TBL_ATTACH
        where UUID = #{uuid}
    </delete>

    <select id="findByBno" resultType="stu.kms.WebSecurity.domain.BoardAttachVO">
        select * from TBL_ATTACH where BNO = #{bno}
    </select>

    <delete id="deleteAll">
        delete TBL_ATTACH where BNO = #{bno}
    </delete>

    <select id="getOldFiles" resultType="stu.kms.WebSecurity.domain.BoardAttachVO">
        select * from TBL_ATTACH where UPLOADPATH = to_char(sysdate - 1, 'yyyy\mm\dd')
    </select>
</mapper>
